{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "dist",
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "types": ["node"],
    "typeRoots": [ "./node_modules/@types" ]
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended",
  "include": ["*.ts", "server.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}  